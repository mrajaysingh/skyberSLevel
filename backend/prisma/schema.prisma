// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String    // Hashed password
  name          String?
  role          String    @default("user") // user, admin (super-admin moved to SuperAdmin table)
  avatar        String?
  banner        String?
  // Profile fields
  firstName     String?
  middleName    String?
  lastName      String?
  designation   String?
  company       String?
  username      String?
  socialFacebook String?
  socialLinkedIn String?
  socialInstagram String?
  googleAnalyticsId String?
  
  // OAuth fields
  googleId      String?   @unique
  githubId      String?   @unique
  provider      String?   // local, google, github
  
  // Subscription/Plan fields (for future use)
  planTier      String?   @default("free") // free, pro, enterprise
  subscriptionId String?
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  
  // Relations
  sessions      Session[]
  card          Crdsb?
  
  @@map("users")
}

// SuperAdmin model - Standalone table for super administrators (no relation to User)
model SuperAdmin {
  id            String    @id @default(uuid())
  email         String    @unique // Email for login
  password      String    // Hashed password (moved from User)
  name          String?   // Name (moved from User)
  avatar        String?   // Avatar (moved from User)
  banner        String?
  // Profile fields
  firstName     String?
  middleName    String?
  lastName      String?
  designation   String?
  company       String?
  username      String?
  socialFacebook String?
  socialLinkedIn String?
  socialInstagram String?
  googleAnalyticsId String?
  
  // OAuth fields (moved from User)
  googleId      String?   @unique
  githubId      String?   @unique
  provider      String?   @default("local") // local, google, github
  
  // Subscription/Plan fields (moved from User)
  planTier      String?   @default("enterprise") // free, pro, enterprise
  subscriptionId String?
  
  // Super admin specific fields
  permissions   String[]  @default([]) // Array of permission strings
  accessLevel   String    @default("full") // full, limited
  isActive      Boolean   @default(true)
  notes         String?   // Admin notes
  
  // IP tracking and status
  currentIp     String?   // Current logged in IP address
  lastIp        String?   // Last logged in IP address (previous)
  status         String    @default("offline") // offline, online
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  
  // Relations
  sessions      Session[]
  card          Crdsb?
  
  @@map("super_admins")
}

// Session model for tracking active sessions
model Session {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if session belongs to regular user
  superAdminId  String?   // Optional: if session belongs to super admin
  token         String    @unique // JWT or session token
  refreshToken  String?   @unique
  expiresAt     DateTime
  refreshExpiresAt DateTime?
  userAgent     String?
  ipAddress     String?
  isValid       Boolean   @default(true)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([superAdminId])
  @@index([token])
  @@index([refreshToken])
  @@index([expiresAt])
  @@map("sessions")
}

// Credit card storage (encrypted values)
model Crdsb {
  id              String   @id @default(uuid())
  userId          String?
  superAdminId    String?
  // Encrypted fields (base64-encoded ciphertext)
  cardNumberEnc   String
  expMonthEnc     String
  expYearEnc      String
  cvvEnc          String
  // Non-sensitive display helpers
  last4           String   // last 4 digits of PAN
  brand           String?  // optional, if detected client-side

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin      SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([superAdminId])
  @@unique([userId])
  @@unique([superAdminId])
  @@map("crdsb")
}

// Archive table for deleted accounts (as requested: table name = "depricated")
model Depricated {
  id            String   @id @default(uuid())
  userId        String?
  superAdminId  String?
  email         String?
  kind          String   // 'user' | 'superAdmin'
  payload       Json     // full snapshot of user + related data
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([superAdminId])
  @@map("depricated")
}
