// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String    // Hashed password
  name          String?
  role          String    @default("user") // user, admin (super-admin moved to SuperAdmin table)
  avatar        String?
  banner        String?
  // Profile fields
  firstName     String?
  middleName    String?
  lastName      String?
  designation   String?
  company       String?
  username      String?
  socialFacebook String?
  socialLinkedIn String?
  socialInstagram String?
  googleAnalyticsId String? // Google Analytics tracking ID
  
  // OAuth fields
  googleId      String?   @unique
  githubId      String?   @unique
  provider      String?   // local, google, github
  
  // Subscription/Plan fields (for future use)
  planTier      String?   @default("free") // free, pro, enterprise
  subscriptionId String?
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  
  // Relations
  sessions      Session[]
  card          Crdsb?
  smtpSettings  SmtpSettings[]
  emails        Email[]
  emailDrafts   EmailDraft[]
  emailTemplates EmailTemplate[]
  
  @@map("users")
}

// SuperAdmin model - Standalone table for super administrators (no relation to User)
model SuperAdmin {
  id            String    @id @default(uuid())
  email         String    @unique // Email for login
  password      String    // Hashed password (moved from User)
  name          String?   // Name (moved from User)
  avatar        String?   // Avatar (moved from User)
  banner        String?
  // Profile fields
  firstName     String?
  middleName    String?
  lastName      String?
  designation   String?
  company       String?
  username      String?
  socialFacebook String?
  socialLinkedIn String?
  socialInstagram String?
  googleAnalyticsId String? // Google Analytics tracking ID
  
  // OAuth fields (moved from User)
  googleId      String?   @unique
  githubId      String?   @unique
  provider      String?   @default("local") // local, google, github
  
  // Subscription/Plan fields (moved from User)
  planTier      String?   @default("enterprise") // free, pro, enterprise
  subscriptionId String?
  
  // Super admin specific fields
  permissions   String[]  @default([]) // Array of permission strings
  accessLevel   String    @default("full") // full, limited
  isActive      Boolean   @default(true)
  notes         String?   // Admin notes
  
  // IP tracking and status
  currentIp     String?   // Current logged in IP address
  lastIp        String?   // Last logged in IP address (previous)
  status         String    @default("offline") // offline, online
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  
  // Relations
  sessions      Session[]
  card          Crdsb?
  smtpSettings  SmtpSettings[]
  emails        Email[]
  emailDrafts   EmailDraft[]
  emailTemplates EmailTemplate[]
  
  @@map("super_admins")
}

// Session model for tracking active sessions
model Session {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if session belongs to regular user
  superAdminId  String?   // Optional: if session belongs to super admin
  token         String    @unique // JWT or session token
  refreshToken  String?   @unique
  expiresAt     DateTime
  refreshExpiresAt DateTime?
  userAgent     String?
  ipAddress     String?
  isValid       Boolean   @default(true) // true = current session, false = terminated
  terminatedAt  DateTime? // When the session was terminated (null for current session)
  
  // Session approval fields
  status        String    @default("active") // active, pending, approved, denied
  pendingApprovalAt DateTime? // When the session was created and needs approval
  approvedAt    DateTime? // When the session was approved
  deniedAt      DateTime? // When the session was denied
  
  // Session activity tracking for auto-approval
  lastActivityAt DateTime? // Last time the session had activity (user interaction, API calls, etc.)
  browserVisible Boolean  @default(true) // Whether the browser tab is visible
  userInteracting Boolean @default(false) // Whether the user is actively interacting
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([superAdminId])
  @@index([token])
  @@index([refreshToken])
  @@index([expiresAt])
  @@index([isValid, terminatedAt])
  @@index([status, pendingApprovalAt])
  @@map("sessions")
}

// Credit card storage (encrypted values)
model Crdsb {
  id              String   @id @default(uuid())
  userId          String?
  superAdminId    String?
  // Encrypted fields (base64-encoded ciphertext)
  cardNumberEnc   String
  expMonthEnc     String
  expYearEnc      String
  cvvEnc          String
  // Non-sensitive display helpers
  last4           String   // last 4 digits of PAN
  brand           String?  // optional, if detected client-side

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin      SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([superAdminId])
  @@unique([userId])
  @@unique([superAdminId])
  @@map("crdsb")
}

// Archive table for deleted accounts (as requested: table name = "depricated")
model Depricated {
  id            String   @id @default(uuid())
  userId        String?
  superAdminId  String?
  email         String?
  kind          String   // 'user' | 'superAdmin'
  payload       Json     // full snapshot of user + related data
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([superAdminId])
  @@map("depricated")
}

// SMTP Settings model - Stores SMTP configuration per user
model SmtpSettings {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if SMTP belongs to regular user
  superAdminId  String?   // Optional: if SMTP belongs to super admin
  
  // SMTP Provider
  provider      String    @default("custom") // brevo, gmail, outlook, custom, etc.
  
  // SMTP Configuration
  host          String    // SMTP server host
  port          Int       // SMTP port (587, 465, 25, etc.)
  secure        Boolean   @default(false) // Use TLS/SSL
  username      String    // SMTP username/login
  password      String    // SMTP password/key (encrypted)
  
  // Email Configuration
  fromName      String    @default("SKYBER TECHNOLOGIES")
  fromEmail     String    @default("informer@skyber.dev")
  toEmail       String?   // Default recipient email
  
  // Status
  isActive      Boolean   @default(true)
  isDefault     Boolean   @default(false) // Default SMTP for user
  
  // Test connection status
  lastTestStatus String?  // success, failure, null
  lastTestAt    DateTime?
  lastTestError String?
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  history       SmtpSettingsHistory[]
  emails        Email[]
  
  @@index([userId])
  @@index([superAdminId])
  @@index([provider])
  @@index([isActive])
  @@map("smtp_settings")
}

// SMTP Settings History - Tracks all changes to SMTP settings
model SmtpSettingsHistory {
  id            String    @id @default(uuid())
  smtpSettingsId String
  
  // SMTP Configuration (snapshot)
  provider      String
  host          String
  port          Int
  secure        Boolean
  username      String
  password      String // Encrypted
  fromName      String
  fromEmail     String
  toEmail       String?
  
  // Change metadata
  changedBy     String?   // User ID who made the change
  changeType    String    // created, updated, deleted
  changeReason  String?   // Optional reason for change
  
  // Timestamps
  createdAt     DateTime  @default(now())
  
  // Relations
  smtpSettings  SmtpSettings @relation(fields: [smtpSettingsId], references: [id], onDelete: Cascade)
  
  @@index([smtpSettingsId])
  @@index([createdAt])
  @@map("smtp_settings_history")
}

// Email model - Stores sent emails
model Email {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if email belongs to regular user
  superAdminId  String?   // Optional: if email belongs to super admin
  smtpSettingsId String?  // SMTP settings used to send
  
  // Email content
  to            String    // Recipient email(s) - comma separated or single
  cc            String?   // CC recipients
  bcc           String?   // BCC recipients
  subject       String    // Email subject
  html          String?   // HTML content
  text          String?   // Plain text content
  
  // Status
  status        String    @default("sent") // sent, failed, pending, scheduled
  messageId     String?   // SMTP message ID
  error         String?   // Error message if failed
  
  // Timestamps
  sentAt        DateTime? // When email was actually sent
  scheduledFor  DateTime? // When email is scheduled to be sent
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  smtpSettings  SmtpSettings? @relation(fields: [smtpSettingsId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([superAdminId])
  @@index([smtpSettingsId])
  @@index([status])
  @@index([sentAt])
  @@index([scheduledFor])
  @@map("emails")
}

// Email Draft model - Stores draft emails
model EmailDraft {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if draft belongs to regular user
  superAdminId  String?   // Optional: if draft belongs to super admin
  
  // Email content
  to            String?   // Recipient email(s)
  cc            String?   // CC recipients
  bcc           String?   // BCC recipients
  subject       String?   // Email subject
  html          String?   // HTML content
  text          String?   // Plain text content
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([superAdminId])
  @@index([updatedAt])
  @@map("email_drafts")
}

// Newsletter Subscription model - Stores newsletter subscribers
model NewsletterSubscription {
  id            String    @id @default(uuid())
  email         String    @unique // Subscriber email
  status        String    @default("active") // active, unsubscribed
  source        String?   // Where they subscribed from (e.g., "website", "dashboard")
  ipAddress     String?   // IP address when subscribed
  userAgent     String?   // User agent when subscribed
  
  // Timestamps
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime?
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
  @@index([status])
  @@index([subscribedAt])
  @@map("newsletter_subscriptions")
}

// Email Template model - Stores email templates
model EmailTemplate {
  id            String    @id @default(uuid())
  userId        String?   // Optional: if template belongs to regular user
  superAdminId  String?   // Optional: if template belongs to super admin
  
  // Template metadata
  name          String    // Template name (e.g., "Newsletter Welcome", "Password Reset")
  category      String?   // Template category (e.g., "newsletter", "transactional", "marketing")
  description   String?   // Template description
  
  // Template content
  subject       String    // Email subject (can contain variables like {username})
  html          String    // HTML content (can contain variables like {username}, {email})
  text          String?   // Plain text content
  
  // Variables available in template
  variables     String[]  @default([]) // e.g., ["username", "email", "company"]
  
  // Status
  isActive      Boolean   @default(true)
  isDefault     Boolean   @default(false) // Default template for category
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  superAdmin    SuperAdmin? @relation(fields: [superAdminId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([superAdminId])
  @@index([category])
  @@index([isActive])
  @@map("email_templates")
}
