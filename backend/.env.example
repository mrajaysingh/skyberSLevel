# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Auth.js Configuration
AUTHJS_SECRET=your-authjs-secret-key-change-this-in-production-min-32-chars

# Database Configuration - Prisma with PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Redis Configuration
REDIS_URL="redis://default:password@host:port"

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32-chars

# OAuth Providers
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# API Keys (if needed)
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...

